{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++-11 生成活动文件",
			"command": "/usr/bin/g++-11",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"/home/song/桌面/EasyCoding_Editor/Linux/src/Code_completion.cpp",
				"/home/song/桌面/EasyCoding_Editor/Linux/src/Code_highlighting.cpp",
				"/home/song/桌面/EasyCoding_Editor/Linux/src/EasyCodingEditor.cpp",
				"/home/song/桌面/EasyCoding_Editor/Linux/src/Edit_kernal.cpp",
				"/home/song/桌面/EasyCoding_Editor/Linux/src/Markdown_parser.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译器: /usr/bin/g++-11"
		}
	]
}