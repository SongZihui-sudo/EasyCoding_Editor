{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			//"command": "F:\\gcc\\mingw32\\bin\\g++.exe",
			"command": "B:\\win_gcc\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${fileDirname}\\easyhtmleditor.cpp",
				"${fileDirname}\\Markdown_parser.cpp",
				"${fileDirname}\\Code_highlighting.cpp",
